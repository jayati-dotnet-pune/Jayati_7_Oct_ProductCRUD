@model Jayati_7_October.Models.Product

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete this product?</p>

<ul>
    <li><strong>ID:</strong> @Model.pid</li>
    <li><strong>Name:</strong> @Model.pname</li>
    <li><strong>Price:</strong> @Model.pprice</li>
</ul>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" value="@Model.pid" />
    <button type="submit">Yes, Delete</button>
    <a href="/Product/DisplayAllProducts">Cancel</a>
</form>

